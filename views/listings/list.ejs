<% layout("layouts/boilerplate.ejs") %>
  <script>
    const coordinates = <%- JSON.stringify(list.geometry.coordinates) %>;
  </script>

  <!-- Main Listing Container -->
  <div class="listing-container">
    <!-- Listing Header -->
    <div class="listing-header">
      <h2 class="listing-title">
        <%= list.title %>
      </h2>
    </div>

    <!-- Listing Details -->
    <div class="listing-details">
      <div class="listing-card">
        <img src="<%= list.image.url %>" alt="list_image" class="listing-image" />
        <div class="listing-body">
          <% if (list.owner) { %>
            <p class="owner">Uploaded by <%= list.owner.username %>
            </p>
            <% } %>
              <p>
                <%= list.description %>
              </p>
              <p><strong>&#8377; <%= list.price.toLocaleString("en-IN") %></strong></p>
              <p>
                <%= list.location %>, <%= list.country %>
              </p>
        </div>
      </div>

      <% if (currUser && list.owner && currUser._id.equals(list.owner._id)) { %>
        <div class="button-group">
          <a href="/listings/<%= list.id %>/edit" class="btn-dark">Edit</a>
          <form action="/listings/<%= list._id %>?_method=delete" method="post">
            <button type="submit" class="btn-dark">Delete</button>
          </form>
        </div>
        <% } %>
    </div>

    <!-- Review Form -->
    <% if (currUser) { %>
      <div class="review-form">
        <hr />
        <h3>Leave a Review</h3>
        <form action="/listings/<%= list.id %>/reviews" method="post" novalidate class="review-form-inner">
          <label for="rating">Rating</label>
          <fieldset class="starability-slot">
            <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked />
            <input type="radio" id="first-rate1" name="review[rating]" value="1" />
            <label for="first-rate1" title="Terrible">1 star</label>
            <input type="radio" id="first-rate2" name="review[rating]" value="2" />
            <label for="first-rate2" title="Not good">2 stars</label>
            <input type="radio" id="first-rate3" name="review[rating]" value="3" />
            <label for="first-rate3" title="Average">3 stars</label>
            <input type="radio" id="first-rate4" name="review[rating]" value="4" />
            <label for="first-rate4" title="Very good">4 stars</label>
            <input type="radio" id="first-rate5" name="review[rating]" value="5" />
            <label for="first-rate5" title="Amazing">5 stars</label>
          </fieldset>

          <label for="comment">Comments</label>
          <textarea name="review[comment]" id="comment" rows="5" required></textarea>
          <button type="submit" class="btn-outline">Submit</button>
        </form>
      </div>
      <% } %>

        <!-- Reviews Section -->
        <div class="reviews-section">
          <hr />
          <% if (list.reviews.length> 0) { %>
            <h3>All Reviews</h3>
            <div class="review-list">
              <% for (let review of list.reviews) { %>
                <div class="review-card">
                  <% if (review.author) { %>
                    <h5>@<%= review.author.username %>
                    </h5>
                    <% } %>
                      <p>
                        <%= review.comment %>
                      </p>
                      <p class="starability-result" data-rating="<%= review.rating %>"></p>
                      <form action="/listings/<%= list._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                        <button class="btn-dark btn-small">Delete</button>
                      </form>
                </div>
                <% } %>
            </div>
            <% } else { %>
              <p class="text-muted">No reviews yet. Be the first to review!</p>
              <% } %>
        </div>

        <!-- Map Section -->
        <div class="map-section">
          <h3>Where you'll be</h3>
          <div id="map"></div>
        </div>
  </div>

  <script src="/JS/map.js"></script>